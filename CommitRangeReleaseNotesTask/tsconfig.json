{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "task",
    "rootDir": "task",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": ["node_modules", "task/**/*.js"]
}
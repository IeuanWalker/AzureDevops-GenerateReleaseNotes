{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "task/dist",
    "rootDir": "task",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./task/node_modules/@types"],
    "skipDefaultLibCheck": true
  },
  "exclude": ["node_modules", "task/**/*.js", "task/node_modules"]
}